---
import Mylayout from "../layouts/Mylayout.astro";
import { Conttec } from "../components/Conttec";
---

<Mylayout title="spaceTecnology">
    <Conttec client:visible />
</Mylayout>
<style>
    body{
        background: url(/assets/technology/background-technology-mobileClip.png) center no-repeat;
        background-size: cover;
    }   

</style>

<script is:inline>
    document.querySelector('img[alt="logo-hamburger"]').addEventListener('click', ()=>{
        document.querySelector('ul').classList.remove('navDeactive')
        document.querySelector('ul').classList.toggle('navActive');
    })
    document.querySelector('img[alt="icon-close"]').addEventListener('click', ()=>{
        document.querySelector('ul').classList.remove('navActive')
        document.querySelector('ul').classList.toggle('navDeactive');
    })
  </script>